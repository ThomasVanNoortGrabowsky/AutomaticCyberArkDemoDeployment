<?xml version="1.0" encoding="utf-8"?>
<unattend xmlns="urn:schemas-microsoft-com:unattend"
          xmlns:wcm="http://schemas.microsoft.com/WMIConfig/2002/State"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:cpi="urn:schemas-microsoft-com:cpi">

  <!-- 1) Windows PE: set up disk, apply WIM, accept EULA -->
  <settings pass="windowsPE">
    <component name="Microsoft-Windows-Setup" processorArchitecture="amd64"
               publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
      <ImageInstall>
        <OSImage>
          <InstallFrom>
            <MetaData wcm:action="add" wcm:keyValue="1">
              <Key>/IMAGE/NAME</Key>
              <Value>Windows Server 2022 Datacenter (Desktop Experience)</Value>
            </MetaData>
          </InstallFrom>
          <InstallTo>
            <DiskID>0</DiskID>
            <PartitionID>1</PartitionID>
          </InstallTo>
        </OSImage>
      </ImageInstall>
      <DiskConfiguration>
        <Disk wcm:action="add">
          <DiskID>0</DiskID>
          <WillWipeDisk>true</WillWipeDisk>
          <CreatePartitions>
            <CreatePartition wcm:action="add">
              <Order>1</Order>
              <Type>Primary</Type>
              <Size>40960</Size>
            </CreatePartition>
          </CreatePartitions>
          <ModifyPartitions>
            <ModifyPartition wcm:action="add">
              <Order>1</Order>
              <PartitionID>1</PartitionID>
              <Format>NTFS</Format>
              <Label>Windows</Label>
              <Letter>C</Letter>
            </ModifyPartition>
          </ModifyPartitions>
        </Disk>
      </DiskConfiguration>
      <UserData>
        <AcceptEula>true</AcceptEula>
        <FullName>Administrator</FullName>
        <Organization>Contoso</Organization>
        <ProductKey></ProductKey>
      </UserData>
    </component>
  </settings>

  <!-- 2) Specialize pass: set computer name -->
  <settings pass="specialize">
    <component name="Microsoft-Windows-Shell-Setup" processorArchitecture="amd64"
               publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
      <ComputerName>WIN2022</ComputerName>
    </component>
  </settings>

  <!-- 3) OOBE: configure auto-logon, admin password, WinRM via FirstLogonCommands -->
  <settings pass="oobeSystem">
    <component name="Microsoft-Windows-Shell-Setup" processorArchitecture="amd64"
               publicKeyToken="31bf3856ad364e35" language="neutral" versionScope="nonSxS">
      <AutoLogon>
        <Password>
          <Value>packer</Value>
          <PlainText>true</PlainText>
        </Password>
        <Enabled>true</Enabled>
        <Username>Administrator</Username>
        <LogonCount>1</LogonCount>
      </AutoLogon>
      <UserAccounts>
        <AdministratorPassword>
          <Value>packer</Value>
          <PlainText>true</PlainText>
        </AdministratorPassword>
      </UserAccounts>
      <FirstLogonCommands>
        <SynchronousCommand wcm:action="add">
          <Order>1</Order>
          <CommandLine>
            powershell -ExecutionPolicy Unrestricted -Command "Enable-PSRemoting -Force;
              New-NetFirewallRule -Name 'WinRM-HTTPS-In-TCP'
                                  -DisplayName 'WinRM HTTPS'
                                  -Direction Inbound
                                  -Action Allow
                                  -Protocol TCP
                                  -LocalPort 5986"
          </CommandLine>
        </SynchronousCommand>
      </FirstLogonCommands>
    </component>
  </settings>

  <!-- 4) Offline image spec: points to the correct WIM index -->
  <cpi:offlineImage cpi:source="wim:c:/sources/install.wim#Windows Server 2022 Datacenter (Desktop Experience)" />
</unattend>
